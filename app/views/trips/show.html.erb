<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @trip.name %>
</p>

<p>
  <b>Description:</b>
  <%= @trip.description %>
</p>

<table>
	<tr>
		<th>Name </th>
		<th>Description</th>
		<th>Remove</th>
	</tr>
	<% @trip.destinations.each do |destination| %>
	<tr>
		<td><%= link_to destination.name, edit_trip_destination_path(@trip,destination) %></td>
		<td><%= destination.description %></td>
		<td><%= link_to 'Remove', trip_destination_path(@trip , destination), method: :delete, data: { confirm: 'Are you sure?' } %></td>

	</tr>
	<% end %>
</table>


<p>
	<%= link_to 'New Destination', new_trip_destination_path(@trip) %>
</p>

<%= link_to 'Edit', edit_trip_path(@trip) %> |
<%= link_to 'Back', trips_path %>
