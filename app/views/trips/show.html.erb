<p id="notice"><%= notice %></p>

<p>
  <h1>Name:
  <%= @trip.name %></h1>
</p>

<p>
  <h2>Description: 
  <%= @trip.description %></h2>
</p>

<table class='table'>
	<tr>
		<th>Name </th>
		<th>Description</th>
		<th>Remove</th>
	</tr>
	<% @trip.destinations.each do |destination| %>
	<tr>
		<td><%= link_to destination.name, edit_trip_destination_path(@trip,destination) %></td>
		<td><%= destination.description %></td>
		<td><%= link_to 'Remove', trip_destination_path(@trip , destination), method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger" %></td>

	</tr>
	<% end %>
</table>


<p>
	<%= link_to 'New Destination', new_trip_destination_path(@trip), class: "btn btn-primary" %>
</p>
<div class="pull-right">
<%= link_to 'Edit', edit_trip_path(@trip) %> |
<%= link_to 'Back', trips_path %>
</div>